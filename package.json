{
  "name": "vuex-redux-saga",
  "version": "0.1.0",
  "description": "Use redux-saga with vuex",
  "main": "dist/vuex-redux-saga.min.js",
  "scripts": {
    "test": "ava",
    "clean": "rimraf dist",
    "coverage": "nyc ava && nyc report --reporter html",
    "lint": "eslint src test",
    "build": "npm run clean && webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xanf/vuex-redux-saga.git"
  },
  "keywords": [
    "vue",
    "vuex",
    "plugin",
    "redux-saga"
  ],
  "files": [
    "dist/vuex-redux-saga.js",
    "dist/vuex-redux-saga.min.js",
    "src",
    "LICENSE",
    "README.md"
  ],
  "author": "Illya Klymov <xanf@xanf.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xanf/vuex-redux-saga/issues"
  },
  "homepage": "https://github.com/xanf/vuex-redux-saga#readme",
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "ava": {
    "require": [
      "babel-core/register"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": 0,
      "arrow-parens": 0,
      "array-bracket-spacing": [
        2,
        "always"
      ]
    },
    "env": {
      "browser": true
    }
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-latest": "^6.22.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "nyc": "^10.1.2",
    "redux-saga": "^1.1.3",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "unminified-webpack-plugin": "^1.2.0",
    "vue": "^2.6.0",
    "vuex": "^2.1.1",
    "webpack": "^2.2.1"
  },
  "peerDependencies": {
    "redux-saga": "^1.1.1",
    "vue": "^2.0.0",
    "vuex": "^3.1.1"
  }
}
